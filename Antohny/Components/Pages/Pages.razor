@page "/register"

<h3 style="color: #007bff; text-align: center; margin-bottom: 20px;">Registro de Usuario</h3>

<div style="max-width: 350px; margin: auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
    <div class="form-group mb-3">
        <label for="fullName"><i class="fa fa-user"></i> Nombre completo</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-user"></i></span>
            <input id="fullName" type="text" class="form-control" placeholder="Tu nombre completo" />
        </div>
    </div>

    <div class="form-group mb-3">
        <label for="email"><i class="fa fa-envelope"></i> Email</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
            <input id="email" type="email" class="form-control" placeholder="email@empresa.com" />
        </div>
    </div>

    <div class="form-group mb-3">
        <label for="password"><i class="fa fa-lock"></i> Contraseña</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-lock"></i></span>
            <input id="password" type="password" class="form-control" placeholder="********" />
        </div>
    </div>

    <button class="btn btn-success w-100 mb-3">Registrar</button>

    <div class="text-center">
        <a href="/" style="color: gray;">Volver al Login</a>
    </div>
</div>
